{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "typings/*": [ "src/typings/*" ],
      "helpers/*": [ "src/helpers/*" ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test/**/*.spec.ts"
  ]
}